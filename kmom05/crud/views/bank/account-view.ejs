<%- include("../partials/header.ejs", {title: title}); %>
<div class="bg"></div>
<div class="bg bg2"></div>
<div class="bg bg3"></div>
<div class="content">
    <h1>Account overview</h1>
    <table>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Balance</th>
        </tr>
    <% for (const row of res) { %>
        <tr>
            <td><%= row.id %></td>
            <td><%= row.name %></td>
            <td class="right"><%= row.balance %></td>
        </tr>
    <% }; %>
    </table>
    <a href="/bank/balance">Go back</a>
</div>

<%- include("../partials/footer.ejs"); %>