<%- include("../partials/header.ejs", {title: title}); %>
<div class="bg"></div>
<div class="bg bg2"></div>
<div class="bg bg3"></div>

<div class="content">
    <h1>Svensk Rock</h1>
    <p>Search concert schedule</p>
    <form action="/exam/search">
        <input id="search" name="search" type="text" placeholder="Search.." />
        <button type="submit">Submit</button>
    </form>
    <% if (res.length > 0){%>
    <p>Sök resultat</p>
    <table>
        <tr>
            <th>Fornamn</th>
            <th>Efternamn</th>
            <th>Alias</th>
            <th>Ort</th>
            <th>Hund namn</th>
            <th>Ras</th>
            <th>Godkänd</th>
        </tr>
        <% for (const row of res) { %>
        <tr>
            <td><%= row.fornamn %></td>
            <td><%= row.efternamn %></td>
            <td><%= row.alias %></td>
            <td><%= row.ort %></td>
            <td>
                <a href="<%= row.url %>"><%= row.namn %></a>
            </td>
            <td><%= row.ras %></td>
            <td><%= row.godkänd %></td>
        </tr>
        <% }; %>
    </table>
    <% } else { %>
    <p>
        Ingen match har hittats <br />
        Vänligen skriv in ett sökord i rutan ovan
    </p>
    <% } %>
</div>

<%- include("../partials/footer.ejs"); %>
