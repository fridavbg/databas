<%- include("../partials/header.ejs", {title: title}); %>
<div class="bg"></div>
<div class="bg bg2"></div>
<div class="bg bg3"></div>

<div class="content">
    <h1>Sök Effektiv Vaccinering</h1>
    <form action="/exam/search">
        <input id="search" name="search" type="text" placeholder="Search.." />
        <button type="submit">Submit</button>
    </form>

    <% if (res.length > 0){%>
    <p>Sök resultat</p>
    <table>
        <tr>
            <th>Sjukdom</th>
            <th>Beskrivning</th>
            <th>Vaccin</th>
            <th>Typ</th>
            <th>Sannolikhet</th>
        </tr>
        <% for (const row of res) { %>
        <tr>
            <td><%= row.sjukdom %></td>
            <td><%= row.beskrivning %></td>
            <% if(row.vaccin === null){ %>
            <td><p>Vaccin ej tillgängligt</p></td>
            <% } else{ %>
            <td><%= row.vaccin %></td>
            <td><%= row.typ %></td>
            <td><%= row.sannolikhet%></td>
            <% } %>
        </tr>
        <% }; %>
    </table>
    <% } else { %>
    <p>
        Ingen match har hittats <br />
        Vänligen skriv in ett sökord i rutan ovan
    </p>
    <% } %>
</div>

<%- include("../partials/footer.ejs"); %>
