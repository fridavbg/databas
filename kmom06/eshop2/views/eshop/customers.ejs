<%- include("../partials/header.ejs", {title: title}); %>
<div class="bg"></div>
<div class="bg bg2"></div>
<div class="bg bg3"></div>
<div class="content">
    <h1>Kunder</h1>
    <table>
        <tr>
            <th>Id</th>
            <th>Namn</th>
            <th>Adress</th>
            <th>Telefonnummer</th>
            <th>Mail</th>
        </tr>
        <% for (const row of res) { %>
