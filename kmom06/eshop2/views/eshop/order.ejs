<%- include("../partials/header.ejs", {title: title}); %>
<div class="bg"></div>
<div class="bg bg2"></div>
<div class="bg bg3"></div>
<div class="content">
    <h1>Beställningar</h1>
    <table>
        <tr>
            <th>Ordernummer</th>
            <th>KundId</th>
            <th>Orderdatum</th>
            <th>Antal orderrader</th>
            <th>Status</th>
        </tr>
        <% for (const row of res) { %>
        <tr>
            <td><%= row.ordernummer %></td>
            <td><%= row.kund %></td>
            <td><% if (row.orderdatum) {%>
                <%= row.orderdatum %>
                <%} else { %>
                    Ej beställd
                    <%} %>
            </td>
            <td><%= row.antal %> st</td>
            <td><%= row.orderstatus %></td>
            <td>
                <a href="/eshop/order/show/<%= row.ordernummer  %> " class="link"> Order </a>
            </td>
        </tr>
        <% }; %>
    </table>
</div>

<%- include("../partials/footer.ejs"); %>